<?xml version="1.0" encoding="utf-8"?>
<layout type="mlr">	
	
	<groups>
		<group class="col-md-2 col-sm-4" >left</group>
		<group class="col-md-3 col-sm-12" >right</group>
		<group 
			   class="col-md-7 col-sm-8"
			   noright-class="col-md-10 col-sm-8"
			   noleft-class="col-md-9 col-sm-12"

			   noleftright-class="col-sm-12">main</group>
	</groups>
	<blocks>
		<top html5tag="section" order="1" id="yt_top">
			<positions>
				<position class="col-sm-12 col-sm-12 hidden-xs" type="modules" style="ytmod" >top-left</position>
				
			</positions>
		</top>					
		
		
		<menu html5tag="nav" order="3" id="yt_menuwrap">
			<positions>
                <position class="col-lg-3 col-md-4 col-sm-5 col-xs-7" type="feature">@logo</position>
				<position class="col-lg-9 col-md-8 col-sm-7" type="feature">@mainmenu</position>

                <position class="col-lg-2 hidden-md hidden-sm hidden-xs" type="modules" style="ytmod" >menu-right</position>
                
			</positions>
		</menu>
		
		<breadcrumb html5tag="section" order="4" id="yt_breadcrumb">
			<positions>
                <position class="col-md-9" type="modules"  style="ytmod" >breadcrumb</position>
                <position class="col-md-3" type="modules"  style="ytmod" >search</position>
			</positions>
		</breadcrumb>
		
		<slideshow html5tag="section" order="5" id="yt_slideshow">
			<positions>
                <position class="col-md-12" type="modules" style="ytmod" >slideshow</position>
				
			</positions>
		</slideshow>
		
		<spotlight2 html5tag="section" order="6" id="yt_spotlight2">
			<positions>
                
                <position class="col-md-2 col-sm-2" type="modules"  style="ytmod" >box-left</position>
                <position class="col-md-7 col-sm-7" style="ytmod" type="modules">box-main</position>
                <position class="col-md-3 col-sm-3" type="modules"  style="ytmod" >box-right</position>
			</positions>
		</spotlight2>
				
		
		
		
        <content html5tag="section" order="8" id="content">
            <positions>
                
                <position group="left"  type="modules"  style="ytmod" >left</position>
                <position group="main"  class="col-md-4 col-sm-4" type="modules"  style="ytmod" >main-left</position>
                <position group="main"  class="col-md-8 col-sm-8" type="modules"  style="ytmod" >main-center</position>
                
                
                <position group="main"  type="message"></position>
                
                <position group="main"  type="component">component</position>
                <position group="main" class="col-md-12 col-sm-12 hidden-xs" style="ytmod" type="modules">main-slide</position>
                <position group="right" type="modules"  style="ytmod" >right</position>
            </positions>
        </content>
        <spotlight3 html5tag="section" order="10" id="yt_spotlight3">
            <positions>
                <position class="col-md-12 col-sm-12" style="ytmod" type="modules">banner-top</position>
                
            </positions>
            
        </spotlight3>
        <spotlight4 html5tag="section" order="12" id="yt_spotlight4">
            <positions>
                <position class="col-md-12 col-sm-12" style="ytmod" type="modules">bottom1</position>
                
            </positions>
        </spotlight4>
        <spotlight5 html5tag="section" order="14" id="yt_spotlight5">
            <positions>
                <position class="col-md-12 col-sm-12" style="ytmod" type="modules">bottom2</position>
                <position class="col-md-12 col-sm-12" style="ytmod" type="modules">banner-bottom</position>
                
            </positions>
        </spotlight5>
        <spotlight7 html5tag="section" order="16" id="yt_spotlight7">
            <positions>
                <position class="col-md-12 col-sm-12" style="ytmod" type="modules">bottom3</position>
                <position class="col-lg-3 col-md-4 col-sm-5 col-xs-12" style="ytmod" type="modules">logo-footer</position>
                <position class="col-lg-9 col-md-8 col-sm-7" style="ytmod" type="modules">menu-bottom</position>
                
            </positions>
        </spotlight7>
        <spotlight6 html5tag="section" order="18" id="yt_spotlight6">
            <positions>
                <position class="col-md-3 col-sm-6" style="ytmod" type="modules">bottom6</position>
                <position class="col-md-3 col-sm-6" style="ytmod" type="modules">bottom7</position>
                <position class="col-md-3 col-sm-6" style="ytmod" type="modules">bottom8</position>
                <position class="col-md-3 col-sm-6" style="ytmod" type="modules">bottom9</position>
            </positions>
        </spotlight6>
		
		<footer html5tag="footer" order="19" id="yt_footer">
			<positions>
				<position class="col-md-8 col-sm-12" type="feature">@copyright</position>
				<position class="col-md-4 col-sm-12" type="modules">footer</position>					
			</positions>
		</footer>												
	</blocks>
</layout>		